/* pages/my/writeOrderlist/writeOrderlist.wxss */
.nav_tab {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    background: #ffffff;
}

.show {
    line-height: 80rpx;
    text-align: center;
    flex: 1;
    color: #333333;
    font-size: 30rpx;
}

.hidden {
    line-height: 80rpx;
    text-align: center;
    color: #e94638;
    flex: 1;
    font-size: 30rpx;
    border-bottom: 2px solid #e94638;
}
page{
    background: #f7f7f7;
}
.index_top_search {
    position: relative;
    margin: 30rpx 0;
  }
  .index_top_search>input {
    height: 60rpx;
    line-height: 60rpx;
    background: #eeeeee;
    border-radius: 100rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
  }
  
  .index_top_search image {
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    left: 4%;
    top: 26%;
  
  }
  .list{
    background: #ffffff;
    border-radius: 20rpx;
    box-shadow: 0px 2px 10px #f1f1f1;
    margin-bottom: 30rpx ;
    overflow: hidden;
}
.list_top{
    padding: 20rpx;
    border-bottom: 1px solid #eeeeee;
    font-size: 28rpx;
}
.list_top>p{
    font-size: 28rpx;
    float: right;
}
.list_cp{
    padding: 20rpx;
    overflow: hidden;
}
.list_cp_text{
    float: left;
    width: 70%;
}
.list_cp>image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    float: left;
}
.list_cp_text>view{
    font-size: 28rpx;
    margin-bottom: 10rpx;
}
.list_cp_text{
    float: left;
    margin-left: 20rpx;
    width: 70%;
}
.list_cp_text>p{
    font-size: 28rpx;
    color: #e94638;
}
.list_cp_text>p>span{
    color: #e94638;
    font-size: 34rpx;
    font-weight: bold;
}
.list_cp_right{
    float: right;
    color: #666666;
}
.list_bottom{
    padding: 0 20rpx 20rpx 20rpx;
    overflow: hidden;
}
.list_bottom>view:first-child{
    float: left;
    font-size: 26rpx;
}
.list_bottom>view:last-child{
    font-size: 26rpx;
    float: right;
}
.yellow{
    color: #ffb702;
}
.red{
    color: #e94638;
}