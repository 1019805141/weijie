/* pages/my/writeOrder/writeOrder.wxss */
.box {
    background: #ffffff;
    border-radius: 10rpx;
    box-shadow: 0px 2px 10px #f1f1f1;

    overflow: hidden;
}

page {
    background: #f7f7f7;

}

.box_top {
    overflow: hidden;
    padding: 30rpx;
}

.box_top>image {
    width: 98rpx;
    height: 98rpx;
    float: left;
    border-radius: 50%
}

.box_top_text>view {
    font-size: 30rpx;
    color: #333333;
    margin-bottom: 12rpx;
}

.box_top_text {
    float: left;
    margin-left: 20rpx;
}

.box_top_text>p {
    color: #666666;
    font-size: 28rpx;
    margin-bottom: 4rpx;
    display: block;
}

.box_bottom {
    border-top: 1px solid #eeeeee;
    text-align: center;
    padding: 14rpx 0;
    color: #e94638;
    font-size: 30rpx;
}

checkbox .wx-checkbox-input {
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
    background: #e94638;
    border-color: #e94638;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 20rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.weui-check {
    position: absolute;
    left: 0;
    top: 45%;
}
.zanwu{
    margin: 50rpx 0;
    margin-top: 200rpx;
  }
  .zanwu image{
    width: 305rpx;
    height:331rpx;
    display: block;
    margin: 0 auto;
  }
  .zanwu text{
    text-align: center;
    margin-top: 30rpx;
    display: block;
    font-size: 28rpx;
    color: #a6a6a9;
  }
.list {
    overflow: hidden;
    position: relative;
    margin-top: 30rpx;
}

.cp_box {
    background: #ffffff;
    border-radius: 10rpx;
    float: right;
    width: 90%;
    box-shadow: 0px 2px 10px #f1f1f1;
}

.cp_title {
    padding: 20rpx;
    border-bottom: 1px solid #eeeeee;
    font-size: 28rpx;
}

.cp_title>p {
    float: right;
}

.cp_list {
    overflow: hidden;
    margin-top: 30rpx;
    padding-left: 20rpx;
    margin-bottom: 30rpx;
}

.cp_list>image {
    width: 100rpx;
    height: 100rpx;
    float: left;
    display: block;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.cp_list_text {
    float: left;
    width: 70%;

}

.cp_list_text>view {
    font-size: 28rpx;
    margin-bottom: 18rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
    overflow: hidden;
}
.list:last-child{
    margin-bottom: 100rpx;
}
.cp_list_text>p {
    font-size: 28rpx;
    color: #e94638;
}

.cp_list_text>p>span {
    font-weight: bold;
    font-size: 36rpx;
}

.cp_num {
    font-size: 28rpx;
    color: #666666;
    float: right;
    position: relative;
    bottom: 0;
    padding-right: 20rpx;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #ffffff;
    width: 100%;
    height: 100rpx;
}

.bottom_check {
    float: left;
    width: 22%;
    overflow: hidden;
    line-height: 100rpx;
}

.bottom_check>view {
    float: left;
    font-size: 28rpx;
}

.bottom_check checkbox {
    float: left;
    padding-left: 30rpx;
    margin-top: -4rpx;
}

.bottom_text {
    line-height: 100rpx;
    font-size: 28rpx;
    float: left;
    width: 46%;
}

.bottom_text>p {
    color: #e94638;
}

.btn {
    float: right;
    background: #e94638;
    text-align: center;
    color: #ffffff;
    width: 30%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}