/* pages/index/list/list.wxss */
/**分类栏**/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.left-navbar {
    position: absolute;
    left: 0;
    width: 22%;
    height: 100%;
    background-color: #f2f2f2;
    font-size: 28rpx
}

.left-navbar view {
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
}

.active {
    background-color: #FFF;
    color: #333333;
    border-left: 4px solid #e94638;
}

#right {
    position: absolute;
    right: 0;
    width: 78%;
    height: 90%;
}

.img-banner {
    height: 150rpx;
    width: 100%;
}

.goods-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
}

.goods-title {
    width: 100%;
    font-size: 15px;
    font-weight: bold;
    padding-left: 10rpx;
}

.goods {
    width: 150rpx;
    font-size: 14px;
    margin: 15rpx;
    text-align: center;
}

.img {
    width: 140rpx;
    height: 140rpx;
}


.index_cp {
    border-bottom: 1px solid #e4e4e4;
    padding-bottom: 20rpx;
    overflow: hidden;
    margin-top: 20rpx;
}

.index_cp:last-child {
    border-bottom: none;
}

.index_cp>image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    float: left;
    margin-left: 20rpx;
}

.index_cp_right {
    float: left;
    margin-left: 20rpx;
    width: 320rpx;
}

.index_cp_right_title {
    color: #333333;
    font-size: 28rpx;
    margin-bottom: 10rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
    overflow: hidden;
}

.index_cp_right>p {
    font-size: 26rpx;
    display: block;
    color: #7a7a7a;
    margin-bottom: 10rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-text-overflow: ellipsis;
    overflow: hidden;
}

.index_cp_right_bq {
    color: #e94638;
    border: 1px solid #e94638;
    border-radius: 50rpx;
    display: inline-block;
    font-size: 22rpx;
    padding: 2rpx 18rpx;
}

.index_cp_fenshu {
    color: #9f9f9f;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.index_cp_fenshu>span {
    color: #e94638;
}

.index_cp_jiage {
    overflow: hidden;
    margin-top: 14rpx;
}

.index_cp_jiage>p {
    color: #e94638;
    float: left;
    display: block;
    font-size: 26rpx;
}

.index_cp_jiage>p>span {
    font-weight: bold;
    font-size: 28rpx;
}

/*主容器*/

.stepper {
    width: 80px;
    height: 26px;
    /*给主容器设一个边框*/
    border-radius: 3px;
    margin: 0 auto;
}



/*加号和减号*/

.stepper text {
    text-align: center;
    float: left;
}



/*数值*/

.stepper input {

    width: 40px;

    height: 26px;

    float: left;

    margin: 0 auto;

    text-align: center;

    font-size: 12px;

    /*给中间的input设置左右边框即可*/

    border-left: 1px solid #ccc;

    border-right: 1px solid #ccc;

}

.jia {
    background: #e94638;
    border-radius: 50%;
    width: 34rpx;
    height: 34rpx;
    color: #ffffff;
    line-height: 34rpx;
    text-align: center;
    position: relative;
}

.jia1 {
    position: absolute;
    right: 10rpx;
}

/*普通样式*/
.stepper .disabled {
    color: #777777;
    background: #dfdfdf;
}

.stepper view {
    float: right;
    margin: 0 10rpx;
    margin-right: 74rpx;
    font-size: 26rpx;
}

.jia2 {
    float: left;
    margin-left: 10rpx;
    color: #777777;
    background: #dfdfdf;
}

.index_cp_jiage>view {
    float: right;
    width: 112rpx;
}
